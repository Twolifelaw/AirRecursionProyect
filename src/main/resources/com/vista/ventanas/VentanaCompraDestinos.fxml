<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="477.0" prefWidth="711.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="Cliente.controlador.VentanaCompraDestinosController">
    <children>
        <AnchorPane layoutX="145.0" prefHeight="216.0" prefWidth="422.0" style="-fx-background-radius: 10;">
            <children>
                <ImageView fx:id="imgDestinos" fitHeight="216.0" fitWidth="422.0" layoutX="1.0" layoutY="-1.0"
                           pickOnBounds="true" smooth="false"/>
            </children>
        </AnchorPane>
        <TextArea fx:id="txtPropiedadesDestino" editable="false" layoutX="40.0" layoutY="260.0" prefHeight="139.0"
                  prefWidth="633.0" style="-fx-background-radius: 10;"/>
        <HBox layoutX="291.0" layoutY="411.0" prefHeight="42.0" prefWidth="153.0">
            <children>
                <Button fx:id="btnReserva" mnemonicParsing="false" onAction="#onReserva" text="Reservar">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btnComprar" mnemonicParsing="false" onAction="#onComprar" prefHeight="25.0"
                        prefWidth="69.0" text="Coprar"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="208.0" layoutY="226.0" prefHeight="25.0" prefWidth="400.0">
            <children>
                <Label fx:id="lblPais" text="a">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="lblCiudad" text="b">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="lblClima" text="c">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="lblPrecio" text="d">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>
